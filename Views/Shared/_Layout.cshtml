<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mapkowanie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mapkowanie.styles.css" asp-append-version="true" />
    <style>
        /*

                #DCF2F1
                #7FC7D9
                #365486
                #0F1035

                #FFB81C; zolty, ostroznie!!
        */
        
        .navbar {
            background-color: #DCF2F1 !important;
        }

        .navbar-brand {
            font-weight: bold;
            color: #0F1035;
            font-size: 150%;
        }

        .peel {
            transition: all 0.3s ease;
        }
         
        .navbar-brand:hover .peel {
            color: #FFB81C;
        }

        .nav-item {
            background-color: #7FC7D9 !important;
            margin-left: 2px;
            /*color: #0F1035;*/

            transition: all 1s ease;
            border-radius: 2px;
            box-sizing: border-box;
        }

        .nav-item:hover {
                background-color: #365486 !important;
        }       
    </style>
</head>



<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">zapracuj_<span class="peel">peel</span></a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" >
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kontoes" asp-action="Index">Twój profil</a>
                        </li>
                        <li class="nav-item" >
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ofertas" asp-action="Create">Stwórz ofertę</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ofertas" asp-action="Index">Przeglądaj dostępne oferty</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - mapkowanie - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
