<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mapkowanie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mapkowanie.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">zapracuj_peel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!--<li class="nav-item" style="background-color: lightyellow;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ExcerciceTypes" asp-action="Index">Rodzaje ćwiczeń</a>
                        </li>
                        <li class="nav-item" style="background-color: lightgreen;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sessions" asp-action="Index">Sessions</a>
                        </li>
                        <li class="nav-item" style="background-color: lightblue;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Rodzajes" asp-action="Index">Rodzaje</a>
                        </li>
                        <li class="nav-item" style="background-color: pink;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Branzas" asp-action="Index">Branże</a>
                        </li>-->
                        <li class="nav-item" style="background-color: gold;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kontoes" asp-action="Index">Edytuj Profil</a>
                        </li>
                        <li class="nav-item" style="background-color: grey;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ofertas" asp-action="Create">Stwórz ofertę</a>
                        </li>
                        <li class="nav-item" style="background-color: lightblue;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ofertas" asp-action="Index">Przeglądaj dostępne oferty</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - mapkowanie - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
